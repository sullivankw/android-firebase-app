<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_marginTop="8dp"
        android:id="@+id/imageProfileDetail"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:contentDescription="profile pic" />
    <TextView
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:id="@+id/displayNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:id="@+id/displayAgeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     />
    <TextView
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:id="@+id/displayGenderDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

        <CheckBox
            android:id="@+id/hobbyCyclingDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cycling" />

        <CheckBox
            android:id="@+id/hobbyHikingDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hiking" />

        <CheckBox
            android:id="@+id/hobbyReadingDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reading" />

        <CheckBox
            android:id="@+id/hobbySwimmingDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Swimming" />

        <CheckBox
            android:id="@+id/hobbyKayakingDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kayaking" />

        <CheckBox
            android:id="@+id/hobbyRunningDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Running" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/deletePrflBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"/>

    <Button
        android:id="@+id/editPrflBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"/>

    </LinearLayout>

</LinearLayout>